%header.navbar.navbar-default.navbar-fixed-top{role: "navigation"}
  .container
    .navbar-header
      %button.navbar-toggle{"data-target" => ".navbar-collapse", "data-toggle" => "collapse", type: "button"}
        %span.sr-only Toggle navigation
        %span.icon-bar
        %span.icon-bar
        %span.icon-bar
      %a.navbar-brand{href: "#{root_url}"} W3 CTO
    .navbar-collapse.collapse
      %ul.nav.navbar-nav
        %li{class: "#{active == "home" ? 'active' : ''}"}
          %a{href: "#{root_path}"} Home
        %li{class: "#{active == "about" ? 'active' : ''}"}
          %a{href: "#{about_path}"} About
      .nav.navbar-right
        = link_to 'Add Company', new_company_path, class: "btn btn-default navbar-btn"